        <java classname="${arg0}" dir="${bin}" classpath="${target}/${jarfile};${coreJarFile};${bin}" failonerror="true" fork="true">
            <arg line="${args}"/>
        	<jvmarg value="-server"/>
        	<jvmarg value="-ea"/>
        </java>
    </target>
	-->
	
	<!-- doc -->
    <target name="doc">
        <javadoc destdir= "${doc}"
                 access="public"
                 windowtitle="Windows">
        <fileset dir="src" defaultexcludes="yes">
                <include name="**/*.java"/>
        </fileset>
        </javadoc>
    </target>

	<!-- clean_w7 -->
    <target name="clean_w7" if="is_windows_7">
        <delete dir="${bin}"/>
        <delete dir="${doc}"/>
    	<delete dir="${target}"/>
        <exec executable="cmd" dir="${native_src}" failonerror="true" searchpath="true" >
            <arg value="/q"/>
            <arg value="/c"/>
            <arg value="clean_w7.bat" />
        </exec>
    </target>

	<!-- clean_w10 (by wcoux) -->
    <target name="clean_w10" if="is_windows_10">
        <delete dir="${bin}"/>
        <delete dir="${doc}"/>
        <delete dir="${target}"/>
        <exec executable="cmd" dir="${native_src}" failonerror="true" searchpath="true">
            <arg value="/q"/>
            <arg value="/c"/>
            <arg value="clean_w10.bat"/>
        </exec>
    </target>
	
	<!-- clean (by urueda) -->
	<target name="clean" depends="clean_w7, clean_w10" />

</project>