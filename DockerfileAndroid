FROM ubuntu:20.04

USER root
RUN apt-get -o Acquire::Check-Valid-Until=false -o Acquire::Check-Date=false update && apt-get install -y openjdk-16-jdk libxkbcommon-x11-0 x11-apps

ADD testar/target/distributions/testar.tar .

ENV JAVA_HOME "/usr/lib/jvm/java-16-openjdk-amd64"

COPY runImageAndroid /runImageAndroid
COPY README.Docker /README.Docker
RUN chmod 777 /runImageAndroid

CMD [ "sh", "/runImageAndroid"]

